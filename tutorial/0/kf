FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      kf;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions     [-1 -3 3 0 0 2 0]; // A/V/m == A^2s^3/kg/m^3  

internalField   uniform 1;

boundaryField
{
    ".*"
    {
        type            calculated;
        value           $internalField;
    }

    frontAndBack
    {
        type            empty;
    }
}


